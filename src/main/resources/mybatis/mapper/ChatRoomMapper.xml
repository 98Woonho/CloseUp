<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.closeup.domain.mapper.ChatRoomMapper">

    <select id="selectChatRoomDtoListByUserId">
        SELECT cr.*, u.name AS expert_user_name
        FROM `chat_room` cr
        JOIN `user` u ON u.id = cr.expert_user_id
        WHERE user_id = #{userId}
    </select>

    <select id="selectChatRoomDtoById">
        SELECT *
        FROM `chat_room`
        WHERE `id` = #{id}
    </select>

    <insert id="insertChatRoom"
            parameterType="com.example.closeup.domain.dto.ChatRoomDto"
            useGeneratedKeys="true"
            keyColumn="id"
            keyProperty="id">
        INSERT INTO `chat_room` (`user_id`, `expert_user_id`)
        VALUES (#{userId}, null)
    </insert>
</mapper>