<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.closeup.mapper.UserMapper">

    <insert id="insertUser"  parameterType="com.example.closeup.dto.UserDto">
        INSERT INTO `user`
        VALUES (#{id}, #{password}, #{phone}, #{carrier})
    </insert>

    <select id="selectUserById" resultType="com.example.closeup.dto.UserDto">
        SELECT  * FROM `user`
        WHERE `id` = #{id}
    </select>

    <select id="selectUserByNameAndPhone" resultType="com.example.closeup.dto.UserDto">
        SELECT * FROM `user`
        WHERE name = #{name} AND phone = #{phone}
    </select>

    <select id="selectUserByNameAndId" resultType="com.example.closeup.dto.UserDto">
        SELECT * FROM `user`
        WHERE name = #{name} AND id = #{id}
    </select>

    <update id="updatePassword">
        UPDATE `user`
        SET password = #{newPassword}
        WHERE id = #{id}
    </update>

</mapper>