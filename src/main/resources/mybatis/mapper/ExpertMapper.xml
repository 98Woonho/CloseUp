<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.closeup.domain.mapper.ExpertMapper">


    <select id="getExpertInformation" resultType="com.example.closeup.domain.dto.ExpertDto">
        SELECT * FROM `expert`
    </select>

    <select id="selectExpertById">
        SELECT *
        FROM `expert`
        WHERE `user_id` = #{id}
    </select>

    <select id="selectExpertByNickname">
        SELECT *
        FROM `expert`
        WHERE `nickname` = #{nickname}
    </select>
</mapper>